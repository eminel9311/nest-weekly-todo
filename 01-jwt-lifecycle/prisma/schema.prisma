generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  username      String         @unique
  name          String?
  password      String
  refreshTokens RefreshToken[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@map("users")
}

model RefreshToken {
  id         String   @id @default(uuid())
  tokenId    String   @unique // ⭐ KEY: UUID từ JWT payload
  token      String   @unique
  expiresAt  DateTime
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  deviceInfo String? // Track device
  ipAddress  String?
  lastUsedAt DateTime @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tokenId]) // ⭐ Index cho query nhanh
  @@index([userId, tokenId])
  @@map("refresh_tokens")
}
